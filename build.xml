<?xml version="1.0"?>
<project name="Java Boxing Profiler" default="compile">
  <property name="src" location="src"/>
  <property name="build" location="classes"/>

  <path id="classpath">
    <fileset dir="lib" includes="**/*.jar"/>
  </path>

  <target name="init">
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="${src}"
           destdir="${build}"
           classpathref="classpath"
           includeantruntime="false"/>
  </target>

  <target name="run" depends="compile">
    <java classname="ist.meic.ap.BoxingProfiler">
      <classpath>
        <path refid="classpath"/>
        <pathelement location="${build}"/>
      </classpath>
    </java>
  </target>

  <target name="clean">
    <delete dir="${build}"/>
  </target>
</project>
